<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivitiesModel.PriceSelection"
    android:background="@color/black">

    <Button
        android:id="@+id/backBtn"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.042"
        android:layout_marginTop="49dp"
        android:background="@drawable/arrowicon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </Button>

    <TextView
        android:layout_width="30dp"
        android:layout_height="17dp"
        android:layout_marginLeft="181dp"
        android:layout_marginTop="57dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.048"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/white"
        android:textSize="12dp"
        android:text="@string/price">

    </TextView>

    <TextView
        android:id="@+id/productPriceTv"
        android:layout_width="64dp"
        android:layout_height="17dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.046"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/backBtn"
        android:textColor="@color/white"
        android:textSize="12dp"
        android:text="@string/productPrice">

    </TextView>
    
    <EditText
        android:id="@+id/priceEntryField"
        android:layout_width="342dp"
        android:layout_height="44dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/productPriceTv"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="24dp"
        android:background="@drawable/entry_fields"
        android:textColor="@color/white"
        android:textColorHint="@color/light_grey"
        android:paddingLeft="20dp"
        android:textSize="14dp"
        android:hint="140 TL">

    </EditText>
    
    <LinearLayout
        android:id="@+id/holder1"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/priceEntryField"
        android:layout_marginTop="28dp"
        android:orientation="horizontal">
        
        <TextView
            android:layout_width="72dp"
            android:layout_height="17dp"
            android:layout_marginLeft="24dp"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:text="@string/shipmentPrice">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="251dp"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:textColorHint="@color/white"
            android:hint="16 TL">

        </TextView>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/holder2"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/holder1"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="86dp"
            android:layout_height="17dp"
            android:layout_marginLeft="24dp"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:text="@string/hizmetBedeli">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="241dp"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:textColorHint="@color/white"
            android:hint="14 TL">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/holder3"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/holder2"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="72dp"
            android:layout_height="17dp"
            android:layout_marginLeft="24dp"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:text="KazancÄ±n">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="251dp"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:textColorHint="@color/white"
            android:hint="90 TL">

        </TextView>

    </LinearLayout>

    <Button
        android:id="@+id/btnPriceSave"
        android:layout_width="304dp"
        android:layout_height="40dp"
        android:layout_marginLeft="43dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/register_button_rounded"
        android:text="@string/save"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.149"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/holder3">

    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivitiesModel.ShippingSelection"
    android:background="@color/black">

    <Button
        android:id="@+id/backBtn"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.042"
        android:layout_marginTop="49dp"
        android:background="@drawable/arrowicon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </Button>

    <TextView
        android:layout_width="82dp"
        android:layout_height="17dp"
        android:layout_marginLeft="155dp"
        android:layout_marginTop="57dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.048"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/white"
        android:textSize="12dp"
        android:text="@string/shipmentSize">

    </TextView>

    <LinearLayout
        android:id="@+id/linearHolder"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="112dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/item_request_rect_holder"
        app:layout_constraintTop_toTopOf="parent"
        >

        <RelativeLayout
            android:layout_width="342dp"
            android:layout_height="44dp"
            android:layout_marginTop="33dp"
            android:layout_marginLeft="24dp"
            android:background="@drawable/item_request_category_brand"
            android:orientation="horizontal">

            <TextView
                android:layout_width="18dp"
                android:layout_height="20dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:text="En">

            </TextView>
            <TextView
                android:layout_width="19dp"
                android:layout_height="20dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="305dp"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:text="20">

            </TextView>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="342dp"
            android:layout_height="44dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="24dp"
            android:background="@drawable/item_request_category_brand"
            android:orientation="horizontal">

            <TextView
                android:layout_width="26dp"
                android:layout_height="20dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:text="Boy">

            </TextView>
            <TextView
                android:layout_width="19dp"
                android:layout_height="20dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="305dp"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:text="80">

            </TextView>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="342dp"
            android:layout_height="44dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="24dp"
            android:background="@drawable/item_request_category_brand"
            android:orientation="horizontal">

            <TextView
                android:layout_width="64dp"
                android:layout_height="20dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:text="Yükseklik">

            </TextView>
            <TextView
                android:layout_width="19dp"
                android:layout_height="20dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="305dp"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:text="40">

            </TextView>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="342dp"
            android:layout_height="44dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="24dp"
            android:background="@drawable/item_request_category_brand"
            android:orientation="horizontal">

            <TextView
                android:layout_width="44dp"
                android:layout_height="20dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:text="Ağırlık">

            </TextView>
            <TextView
                android:layout_width="28dp"
                android:layout_height="20dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="305dp"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:text="500">

            </TextView>

        </RelativeLayout>
    </LinearLayout>
    
    <Button
        android:id="@+id/btnShipmentSave"
        android:layout_width="304dp"
        android:layout_height="40dp"
        android:background="@drawable/register_button_rounded"
        android:textSize="14dp"
        android:text="@string/save"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearHolder"
        android:layout_marginTop="240dp"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:textColor="@color/black"
        >

    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="homePageItemRequestViewModel"
            type="com.sabanciuniv.tomofilyasprint1.viewModel.HomePageItemRequestViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

<androidx.constraintlayout.widget.ConstraintLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivitiesModel.HomePageItemRequest">
    <Button
        android:id="@+id/backBtn"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.042"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/arrowicon"
        >

    </Button>

    <TextView
        android:layout_width="70dp"
        android:layout_height="17dp"
        android:layout_marginLeft="161dp"
        android:layout_marginTop="57dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="12dp"
        android:textColor="@color/white"
        android:text="@string/itemRequest">

    </TextView>
<LinearLayout
    android:id="@+id/linearHolder"
    android:layout_width="match_parent"
    android:layout_height="410dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="91dp"
    android:background="@drawable/item_request_rect_holder"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="52dp"
        android:layout_height="17dp"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="24dp"
        android:textColor="@color/white"
        android:textSize="12dp"
        android:text="@string/itemName">

    </TextView>

    <EditText
        android:id="@+id/itemReqNameText"
        android:layout_width="342dp"
        android:layout_height="44dp"
        android:layout_marginTop="12dp"
        android:textColor="@color/white"
        android:layout_marginLeft="24dp"
        android:background="@drawable/item_request_button_rounded"
        android:textColorHint="@color/item_request_color"
        android:textSize="14dp"
        android:hint="@string/itemNameHint"
        android:paddingLeft="20dp"
        >

    </EditText>
    
    <TextView
        android:layout_width="99dp"
        android:layout_height="17dp"
        android:layout_marginTop="32dp"
        android:textSize="12dp"
        android:textColor="@color/white"
        android:text="@string/itemRequestDesc"
        android:layout_marginLeft="24dp">

    </TextView>
    
    <EditText
        android:id="@+id/itemReqDescText"
        android:layout_width="342dp"
        android:layout_height="90dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="24dp"
        android:textColor="@color/white"
        android:background="@drawable/item_request_button_rounded"
        android:textColorHint="@color/item_request_color"
        android:textSize="14dp"
        android:paddingBottom="15dp"
        android:hint="@string/itemRequestDescEx"
        android:paddingLeft="25dp">


    </EditText>
    <Button
        android:id="@+id/itemReqCatBtn"
        android:layout_width="342dp"
        android:layout_height="44dp"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="24dp"
        android:text="@string/category"
        android:textAlignment="textStart"
        android:paddingLeft="20dp"
        android:background="@drawable/item_request_category_brand"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="14dp">

    </Button>

    <Button
        android:id="@+id/itemReqBrandBtn"
        android:layout_width="342dp"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="24dp"
        android:text="@string/brand"
        android:textAlignment="textStart"
        android:paddingLeft="20dp"
        android:background="@drawable/item_request_category_brand"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="14dp">

    </Button>
    
</LinearLayout>

    <Button
        android:id="@+id/generateRequestBtn"
        android:layout_width="304dp"
        android:layout_height="40dp"
        android:layout_marginLeft="43dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/home_page_filter_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.149"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearHolder"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="14dp"
        android:text="@string/generateRequest">

    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>